{
  "compilerOptions": {
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "paths": {
      "@shared/*": ["../shared/*"],
      "@lib/*": ["../lib/*"],
      "@app/*": ["../app/*"]
    },
    "target": "ES2019",
    "typeRoots": ["node_modules/@types"],
    "types": ["assemblyscript/std/types/portable", "node"],
    "lib": ["dom", "ES2020"],
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": [
    "./shared/**/*.ts",
    "./app/**/*.ts",
    "./lib/**/*.ts",
    "./lib/utilities/wasm.js"
  ],
  "exclude": [
    "./node_modules",
    "./tests"
  ]
}